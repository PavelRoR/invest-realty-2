#main
	padding 0
	background-image: url(../img/backs/main.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	position relative
.main
	&-clouds
		position absolute
		z-index 0
		width auto
		bottom: -210px
		left 0
		right 0
		margin 0 auto
	&-title
		font-size: 50px
		font-weight: 900
		text-transform uppercase
		text-align center
		line-height: 56px
		span
			display block
			color #009de9
	&-subtitle
		font-size: 25px
		margin 25px 0 50px
		text-transform uppercase
		text-align center
		line-height: 56px
	&-list
		list-style: none
		margin-bottom: 45px
		li
			margin-bottom: 30px
			span
				display block
				font-size: 20px
				font-weight: bold
	&-text
		font-size: 18px
		font-weight: bold
	&-cta
		font-size: 20px
		font-weight: bold
		text-transform uppercase
		color #d2c2a0
		margin 30px 0
	&-img
		position relative
		img
			display block
			width 100%
			max-width 658px
			margin 0 auto
		&-text
			position absolute
			padding 16px 20px 10px
			border-radius: 8px
			background-color: #171718
			right 0
			bottom: 160px
			text-align center
			width 100%
			max-width 580px
			p
				font-size: 16px
				span
					text-transform uppercase
					display block
					font-weight: 900